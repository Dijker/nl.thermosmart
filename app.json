			"pair": [
				{
					"id": "start"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_stations"
					}
				},
				{
					"id": "add_stations",
					"template": "add_devices"
				}
			]
		}
	],
	"dependencies": {
		"request": "*"
	}
}