{
	"id": "nl.thermosmart",
	"version": "2.0.2",
	"sdk": 2,
	"compatibility": ">=1.5.0",
	"name": {
		"en": "ThermoSmart"
	},
	"description": {
		"en": "The smart Wi-Fi thermostat",
		"nl": "De slimme Wi-Fi thermostaat"
	},
	"author": {
		"name": "Athom B.V.",
		"email": "info@athom.com"
	},
	"category": "climate",
	"images": {
		"large": "assets/images/large.jpg",
		"small": "assets/images/small.jpg"
	},
	"drivers": [
		{
			"id": "thermostat",
			"name": {
				"en": "ThermoSmart"
			},
			"class": "thermostat",
			"capabilities": [ "target_temperature", "measure_temperature" ],
			"capabilitiesOptions": {
				"target_temperature": {
					"min": 5,
					"max": 30,
					"step": 0.5
				}
			},
			"images": {
				"large": "drivers/thermostat/assets/images/large.png",
				"small": "drivers/thermostat/assets/images/small.png"
			},
			"pair": [
				{
					"id": "login_oauth2",
					"template": "login_oauth2"
				},
				{
					"id": "list_devices",
					"template": "list_devices_singular",
					"navigation": {
						"next": "add_devices"
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"triggers": [
			{
				"id": "paused",
				"title": {
					"en": "Has been paused",
					"nl": "Is gepauzeerd"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=thermostat"
					}
				]				
			},
			{
				"id": "unpaused",
				"title": {
					"en": "Has been resumed",
					"nl": "Is niet meer gepauzeerd"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=thermostat"
					}
				]				
			}
		],
		"conditions": [
			{
				"id": "is_paused",
				"title": {
					"en": "Is !{{|not}} paused",
					"nl": "Is !{{|niet}} gepauzeerd"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=thermostat"
					}
				]
			}
		],
		"actions": [
			{
				"id": "set_pause_true",
				"title": {
					"en": "Pause ThermoSmart",
					"nl": "Pauzeer ThermoSmart"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=thermostat"
					}
				]
			},
			{
				"id": "set_pause_false",
				"title": {
					"en": "Resume ThermoSmart",
					"nl": "Hervat ThermoSmart"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=thermostat"
					}
				]
			},
			{
				"id": "set_outside_temperature",
				"title": {
					"en": "Set outside temperature",
					"nl": "Zet buiten temperatuur"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=thermostat"
					},
					{
						"name": "outside_temperature",
						"type": "range",
						"min": -50,
						"max": 50,
						"step": 0.5,
						"label": " Â°C",
						"labelDecimals": 1
					}
				]
			},
			{
				"id": "unset_outside_temperature",
				"title": {
					"en": "Unset outside temperature",
					"nl": "Zet buiten temperatuur terug"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=thermostat"
					}
				]
			}
		]
	}
}