{
	"id": "nl.thermosmart",
	"version": "1.0",
	"name": {
		"en": "ThermoSmart"
	},
	"description": {
		"en": "The smart Wi-Fi thermostat",
		"nl": "De slimme Wi-Fi thermostaat"
	},
	"author": {
		"name": "Emile Nijssen",
		"website": "http://www.emilenijssen.nl"
	},
	"images": {
		"large": "large.jpg",
		"small": "small.jpg"
	},
	"drivers": [
		{
			"id": "thermostat",
			"name": {
				"en": "ThermoSmart"
			},
			"category": "climate",
